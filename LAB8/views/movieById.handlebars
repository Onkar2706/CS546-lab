<article>
  <h1>{{movies.Title}}</h1>
  <img alt="{{movies.Title}}" src="{{movies.Poster}}">

  <h2>Plot</h2>
  <p>{{movies.Plot}}</p>
  <section>
    <h3>Info</h3>
    <dl>
      <dt>Year Released:</dt>
      <dd>{{movies.Year}}</dd>
      <dt>Rated:</dt>
      <dd>{{movies.Rated}}</dd>
      <dt>Runtime:</dt>
      <dd>{{movies.Runtime}}</dd>
      <dt>Genre(s):</dt>
      <dd>{{movies.Genre}}</dd>
      <dt>Box Office Earnings:</dt>
      <dd>{{movies.BoxOffice}}</dd>
      <dt>DVD Release Date:</dt>
      <dd>{{movies.Release}}</dd>
    </dl>
  </section>

  <section>
    <h4>Cast and Crew</h4>
    <p><strong>Director:</strong> {{movies.Director}}</p>
    <p><strong>Writer:</strong> {{movies.Writer}}</p>
    <p><strong>Cast:</strong> {{movies.Actors}}</p>
  </section>
  
  <section>
    <h4>Ratings</h4>
    <table>
      <thead>
        <tr>
          <th>Source</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        {{#each movies.Ratings}}
        <tr>
          <td>{{this.Source}}</td>
          <td>{{this.Value}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </section>

  <a href="/">Search for Another Movie</a>
</article>
